<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/playa">


    <TextView
        android:id="@+id/textView"
        android:layout_width="356dp"
        android:layout_height="240dp"
        android:text="@string/stitch_es_un_extraterrestre_creado_para_causar_destrucci_n_pero_en_la_pel_cula_lilo_stitch_se_convierte_en_el_amigo_de_lilo_una_ni_a_hawaiana_a_lo_largo_de_la_historia_stitch_desarrolla_un_sentido_de_pertenencia_y_afecto_hacia_su_nueva_familia"
        android:textSize="22sp"
        android:background="@color/white"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.694" />

    <Button
        android:id="@+id/button"
        android:layout_width="182dp"
        android:layout_height="95dp"
        android:layout_marginBottom="44dp"
        android:text="@string/mas"
        android:textSize="@android:dimen/app_icon_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="232dp"
        android:layout_height="464dp"
        android:layout_marginBottom="348dp"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/stitch" />

</androidx.constraintlayout.widget.ConstraintLayout>